[Unit]
Description=Hyperion-ng service
After=graphical.target
ConditionPathExists=/storage/.kodi/userdata/addon_data/service.hyperion.ng/hyperion.config.json

[Service]
ExecStart=/bin/sh -c "exec sh /storage/.kodi/addons/service.hyperion.ng/bin/hyperiond.start"
TimeoutStopSec=2
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=default.target
